<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">

      <form class="form-signin">
        <h2 class="form-signin-heading">로그인</h2>
        <%= f.label :email, class: 'sr-only'%>
        <%= f.text_field :email, required: false, autofocus: true, type: 'email', class: 'form-control', placeholder: 'Email address' %><br>
        <%= f.label :password, class: 'sr-only'%>
        <%= f.password_field :password, required: false, type: 'password', class: 'form-control', placeholder: 'password' %><br>
        <!-- <div class="checkbox">
          <label>
            <%= f.check_box :remember_me, as: :boolean, value: "remember-me" if devise_mapping.rememberable? %>Remember me
          </label>
        </div> -->
        <div class="form-actions">
          <%= f.submit t(".sign_in"), class: "btn btn-lg btn-primary btn-block" %>
        </div>
      </form>

    </div> <!-- /container -->
  <% end %>

